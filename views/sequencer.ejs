<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Sequencer</title>
    <link href="/css/styles.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/sequencer/css/style.css" />
  </head>
  <body>
    <div class="container">
      <h1>Sequencer</h1>
      <div class="sequencer" id="sequencer">
        <% for (let r = 0;  r < 8; r++) { %>
          <div id="row-<%= r %>" class="row">
            <% for (let c = 0; c < 16; c++) { %>
              <div id="<%= r %>-<%= c %>" class="cell strength-0">
              </div>
            <% } %>
          </div>
        <% } %>
      </div>
      <button id="startButton">Start</button>
      <button id="stopButton">Stop</button>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/vendor/Tone.js"></script>
    <script src="/sequencer/js/sequencer-controller.js"></script>
    <script src="/sequencer/js/sequencer-player.js"></script>
    <script>
      document.getElementsByClassName('container')[0].style.height = `${window.innerHeight}px`
    </script>
  </body>
</html>
